<Window x:Class="Booking.Views.admin.AdminCreateUserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:Booking.ViewModels.admin"
        xmlns:local="clr-namespace:Booking.Views.admin"
        mc:Ignorable="d"
        Title="AdminCreate" Height="450" Width="800"
        WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown" Background="Transparent" AllowsTransparency="True">
    
    <Window.DataContext>
        <viewModel:AdminCreateUserViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>

    <Window.Visibility>
        <Binding Path="IsViewVisible" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
    </Window.Visibility>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="15" Grid.Column="0"
BorderThickness="3">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#313131" Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#525252" Offset="0"/>
                    <GradientStop Color="#414141" Offset="0.75"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Create User"
               Foreground="DarkGray"
               FontSize="10"
               Grid.Column="0"
               VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <Button x:Name="buttonMinimise"
            BorderThickness="0"
            Content="-" Foreground="White"
            FontSize="16" Cursor="Hand"
            Grid.Column="1"
            Click="Minimise">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#39465c"></Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#182130"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                        CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>

                    </Button>
                    <Button x:Name="buttonClose"
            BorderThickness="0"
            Content="X" Foreground="White"
            FontSize="12" Cursor="Hand"
            Grid.Column="2"
            Click="Close">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#5e282d"></Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2b1012"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                        CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="250" Grid.Row="1"
            Orientation="Vertical" Margin="0,5,0,0">
                    <TextBlock Text="Booking"
               Foreground="White" FontSize="25"
               FontWeight="Medium" HorizontalAlignment="Center"/>

                    <TextBlock Text="Name"
               Foreground="DarkGray" FontSize="12"
               FontWeight="Medium" 
               Margin="0,5,0,0"/>
                    <TextBox x:Name="nameTextBox" FontSize="12"
             FontWeight="Medium" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
             Foreground="White" CaretBrush="LightGray"
             BorderThickness="0,0,0,1" Height="28"
             VerticalContentAlignment="Center"
             Margin="0,5,0,0" Padding="30,0,0,0">
                        <TextBox.Background>
                            <ImageBrush ImageSource="/Images/user.png"
                        Stretch="Uniform"
                        AlignmentX="Left"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="Email"
                   Foreground="DarkGray" FontSize="12"
                   FontWeight="Medium" 
                   Margin="0,15,0,0"/>
                    <TextBox x:Name="emailTextBox" FontSize="12" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                 FontWeight="Medium" Background="Transparent"
                 Foreground="White" CaretBrush="LightGray"
                 BorderThickness="0,0,0,1" Height="28"
                 VerticalContentAlignment="Center"
                 Margin="0,5,0,0" Padding="30,0,0,0">
                    </TextBox>
                    <TextBlock Text="Login"
                   Foreground="DarkGray" FontSize="12"
                   FontWeight="Medium" 
                   Margin="0,15,0,0"/>
                    <TextBox x:Name="loginTextBox" FontSize="12" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                 FontWeight="Medium" Background="Transparent"
                 Foreground="White" CaretBrush="LightGray"
                 BorderThickness="0,0,0,1" Height="28"
                 VerticalContentAlignment="Center"
                 Margin="0,5,0,0" Padding="30,0,0,0">
                    </TextBox>
                    <TextBlock Text="Password"
                   Foreground="DarkGray" FontSize="12"
                   FontWeight="Medium" 
                   Margin="0,15,0,0"/>
                    <TextBox x:Name="passwordTextBox" FontSize="12" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                 FontWeight="Medium" Background="Transparent"
                 Foreground="White" CaretBrush="LightGray"
                 BorderThickness="0,0,0,1" Height="28"
                 VerticalContentAlignment="Center"
                 Margin="0,5,0,0" Padding="30,0,0,0">
                    </TextBox>
                    <TextBlock Text="Role"
                        Foreground="DarkGray" FontSize="12"
                        FontWeight="Medium" 
                        Margin="0,15,0,0"/>
                    <ComboBox x:Name="roleComboBox"
                        Text="{Binding UserRole, UpdateSourceTrigger=PropertyChanged}"
                        ItemsSource="{Binding Roles}" 
                        SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
                        FontSize="12" FontWeight="Medium"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0,0,0,1"
                        Height="28"
                        VerticalContentAlignment="Center"
                        Margin="0,5,0,0" Padding="10,0,0,0"/>


                    <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="#D7596D" FontSize="12"
                       FontWeight="Medium" 
                       Margin="0,15,0,0" TextWrapping="Wrap"/>

                    <Button x:Name="buttonCreate"
            BorderThickness="0"
            Content="Create" Foreground="White"
            FontSize="12" Cursor="Hand"
            Grid.Column="2"
            Margin="0,15,0,0"
            Command="{Binding CreateUserCommand}">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2e2e2e"></Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#121212"></Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150" Height="40"
                        CornerRadius="20" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
