<UserControl x:Class="Booking.Views.Scenes.Sub_Scenes.UserAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Booking.Views.Scenes.Sub_Scenes"
             xmlns:adminViewModels="clr-namespace:Booking.ViewModels.admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="550">

    <UserControl.DataContext>
        <adminViewModels:UserAdminViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button x:Name="buttonCreate"
                    Command="{Binding CreateUserCommand}"
                    BorderThickness="0"
                    Content="Create" Foreground="White"
                    FontSize="12" Cursor="Hand"
                    Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2e2e2e"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#121212"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" Height="40"
                                CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="buttonUpdate"
                     Command="{Binding UpdateUserCommand}"
                     BorderThickness="0"
                     Content="Update" Foreground="White"
                     FontSize="12" Cursor="Hand"
                     Grid.Column="0"
                     Grid.Row="1"
                     Margin="0,0,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2e2e2e"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#121212"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" Height="40"
                     CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="buttonDelete"
                     Command="{Binding DeleteUserCommand}"
                     BorderThickness="0"
                     Content="Delete" Foreground="White"
                     FontSize="12" Cursor="Hand"
                     Grid.Column="0"
                     Grid.Row="2"
                     Margin="0,0,0,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#2e2e2e"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#121212"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" Height="40"
                     CornerRadius="20" Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
        <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Grid.Column="1" Text="Login"
                       Foreground="DarkGray" FontSize="12"
                       FontWeight="Medium" 
                       Margin="0,15,0,0"/>
            <TextBox Grid.Column="1" x:Name="loginTextBox" FontSize="12" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                     FontWeight="Medium" Background="Transparent"
                     Foreground="White" CaretBrush="LightGray"
                     BorderThickness="0,0,0,1" Height="28"
                     VerticalContentAlignment="Center"
                     Margin="0,5,0,0" Padding="30,0,0,0">
            </TextBox>
            <TextBlock Grid.Column="1" Text="Password"
                       Foreground="DarkGray" FontSize="12"
                       FontWeight="Medium" 
                       Margin="0,15,0,0"/>
            <TextBox Grid.Column="1" x:Name="passwordTextBox" FontSize="12" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                     FontWeight="Medium" Background="Transparent"
                     Foreground="White" CaretBrush="LightGray"
                     BorderThickness="0,0,0,1" Height="28"
                     VerticalContentAlignment="Center"
                     Margin="0,5,0,0" Padding="30,0,0,0">
            </TextBox>
        </StackPanel>

    </Grid>
    
</UserControl>
